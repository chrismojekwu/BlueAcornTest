.featuredProducts {
    display: flex;
    flex-wrap: wrap;
    text-align: center;
}

.title {
    text-align: center;
}

.featured-list-item {
    display: inline-block;
    width: 48%;
    text-align: center;
    cursor: pointer;
}

.featured-list-item > *, .featured-item-img {
    display: block;
}

.featured-item-title {
    font-size: 16px;
    font-weight: bolder;
}

.featured-item-img {
    margin: auto;
}

.featured-products-list {
    text-align: center;
}

.featured-item-button {
    margin: auto;
    width: 45%;
    line-height: 28px;
    border: 2px solid #8441FD;
    background-color: #8441FD;
    color: #FFFFFF;
}

.featured-item-button:hover {
    background-color: #FFFFFF;
    color: #000000;
}

.featured-item-button--tab {
    position: relative;
    left: 21%;
    bottom: 10px;
    margin: auto;
    width: 5%;
    height: 10px;
    background: linear-gradient(135deg, #5B01FD 50%, #FFFFFF 50%);
}





@media (min-width:1025px) {
    .featured-list-item {
        width: 23%;
    }
}